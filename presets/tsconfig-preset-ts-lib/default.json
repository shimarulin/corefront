{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Corefront ESM Library",
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "ESNext",
    "strict": true,
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "paths": {
      "~/*": [
        "./*"
      ]
    },
  }
}
