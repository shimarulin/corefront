{
  "extends": "@corefront/tsconfig-preset-ts-lib/default.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "dist",
    "rootDir": "src",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
