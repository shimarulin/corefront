{
  "name": "@corefront/cli",
  "version": "1.0.0",
  "description": "Command line tool for Corefront project maintenance",
  "license": "ISC",
  "author": "Vyacheslav Shimarulin",
  "bin": {
    "cx": "./bin/run.mjs"
  },
  "type": "module",
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "swc --delete-dir-on-start --strip-leading-paths --out-file-extension mjs -d dist src",
    "declaration": "tsc --declaration --emitDeclarationOnly && tsc-alias",
    "dev": "pnpm run build --watch",
    "postinstall": "pnpm run build && pnpm setup && pnpm link --global"
  },
  "dependencies": {
    "@inquirer/prompts": "^4.3.1",
    "@inquirer/select": "^2.2.1",
    "fast-glob": "^3.3.2",
    "find-up": "^7.0.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.3.12",
    "@swc/core": "^1.4.11",
    "@types/inquirer": "^9.0.7",
    "@types/yargs": "^17.0.32",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "readdirp": "^3.6.0",
    "tsc-alias": "^1.8.8",
    "type-fest": "^4.15.0",
    "typescript": "^5.3.3"
  }
}
