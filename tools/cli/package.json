{
  "name": "@corefront/cli",
  "version": "1.0.0",
  "description": "Command line tool for Corefront project maintenance",
  "license": "ISC",
  "author": "Vyacheslav Shimarulin",
  "bin": {
    "cx": "./bin/run.mjs"
  },
  "type": "module",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "import": "./dist/index.mjs"
      }
    }
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "postinstall": "npm run build && pnpm setup && pnpm link --global"
  },
  "dependencies": {
    "@inquirer/select": "^2.2.1",
    "execa": "^8.0.1",
    "fast-glob": "^3.3.2",
    "find-up": "^7.0.0",
    "ramda": "^0.29.1",
    "readdirp": "^3.6.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@corefront/tsconfig-preset-tools": "workspace:*",
    "@types/ramda": "^0.29.12",
    "@types/yargs": "^17.0.32",
    "concurrently": "^8.2.2",
    "tsc-alias": "^1.8.8",
    "type-fest": "^4.15.0"
  }
}
